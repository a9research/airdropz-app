{
  "name": "airdropzalpha",
  "version": "0.0.1",
  "description": "Electron app with Next.js and proxy browser functionality",
  "author": "Austin",
  "private": true,
  "main": "electron/main.js",
  "preload": "electron/preload.js",
  "scripts": {
    "dev": "next dev",
    "build": "next build && node scripts/copy-plugins.js",
    "start": "next start",
    "electron": "electron .",
    "electron-dev": "concurrently \"next dev\" \"wait-on http://localhost:3000 && NODE_ENV=development electron .\"",
    "electron-pack": "node scripts/fix-sharp.js && node scripts/fix-venv-symlinks.js && node scripts/build-python-executables.js && npm run build && electron-builder",
    "electron-pack-mac": "node scripts/fix-sharp.js && node scripts/fix-venv-symlinks.js && node scripts/build-python-executables.js && npm run build && electron-builder --mac",
    "electron-pack-win": "node scripts/fix-sharp.js && node scripts/fix-venv-symlinks.js && node scripts/build-python-executables.js && npm run build && electron-builder --win",
    "electron-pack-linux": "node scripts/fix-sharp.js && node scripts/fix-venv-symlinks.js && node scripts/build-python-executables.js && npm run build && electron-builder --linux",
    "preelectron-pack": "node scripts/fix-sharp.js && node scripts/fix-venv-symlinks.js && node scripts/build-python-executables.js && npm run build",
    "postinstall": "node scripts/fix-sharp.js",
    "lint": "eslint"
  },
  "dependencies": {
    "@crawlee/playwright": "^3.15.0",
    "@hookform/resolvers": "^5.2.2",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-hover-card": "^1.1.15",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-popover": "^1.1.15",
    "@radix-ui/react-progress": "^1.1.7",
    "@radix-ui/react-radio-group": "^1.3.8",
    "@radix-ui/react-scroll-area": "^1.2.10",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-separator": "^1.1.7",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-tabs": "^1.1.13",
    "@radix-ui/react-tooltip": "^1.2.8",
    "2captcha": "^3.0.5-2",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "crawlee": "^3.15.0",
    "electron-squirrel-startup": "^1.0.1",
    "express": "^5.1.0",
    "lucide-react": "^0.544.0",
    "next": "15.5.3",
    "playwright": "^1.55.1",
    "pouchdb": "^9.0.0",
    "pouchdb-find": "^9.0.0",
    "react": "19.1.0",
    "react-cloudflare-turnstile": "^2.0.0",
    "react-dom": "19.1.0",
    "react-hook-form": "^7.63.0",
    "sonner": "^2.0.7",
    "tailwind-merge": "^3.3.1",
    "zod": "^4.1.11"
  },
  "devDependencies": {
    "@types/node": "^20",
    "@types/pouchdb": "^6.4.2",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "autoprefixer": "^10.4.20",
    "concurrently": "^9.2.1",
    "electron": "^38.1.2",
    "electron-builder": "^25.1.8",
    "eslint": "^9",
    "eslint-config-next": "15.5.3",
    "node-loader": "^2.1.0",
    "pluggable-electron": "^1.0.0",
    "tailwindcss": "^3.4.0",
    "typescript": "^5",
    "wait-on": "^9.0.0"
  },
  "build": {
    "appId": "com.airdropzalpha.app",
    "productName": "AirdropzAlpha",
    "directories": {
      "output": "dist"
    },
    "files": [
      "electron/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "asarUnpack": [
      "runtime/python-env/**/*",
      "node_modules/axios/**/*"
    ],
    "extraResources": [
      {
        "from": "plugins",
        "to": "plugins"
      },
      {
        "from": "out",
        "to": "out"
      },
      {
        "from": "dist/executables",
        "to": "executables"
      },
      {
        "from": "runtime/python-env",
        "to": "runtime/python-env"
      }
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "icon": "public/icon.icns",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "arm64",
            "x64"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "arm64",
            "x64"
          ]
        }
      ]
    },
    "win": {
      "icon": "public/icon.ico",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "linux": {
      "icon": "public/icon.png",
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "deb",
          "arch": [
            "x64"
          ]
        }
      ]
    }
  }
}
